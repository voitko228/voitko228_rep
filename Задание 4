	cout << "Среднее арифм.: " << (a + b) / 2 << endl;
	

	//Задание 4
	cout << "Задание 4" << '\n';
	float a, b;
	cout << "a: ";
	cin >> a;
	cout << "b: ";
	cin >> b;
	cout << pow(a, 2) + pow(b, 2) << endl;
	cout << pow(a, 2) - pow(b, 2) << endl;
	cout << pow(a, 2) * pow(b, 2) << endl;
	cout << pow(a, 2) / pow(b, 2) << endl;

	//Задание 5
	cout << "Задание 5" << '\n';
	float a, b;
	cout << "a: ";
	cin >> a;
	cout << "b: ";
	cin >> b;
	cout << abs(a) + abs(b) << endl;
	cout << abs(a) - abs(b) << endl;
	cout << abs(a) * abs(b) << endl;
	cout << abs(a) / abs(b) << endl;
	
