	float s = a * b;
  cout << "Площадь равна: " << s << endl;
  float p = 2 * (a + b);
  cout << "Периметр равен: " << p << endl;

	//Задание 2
  cout << "Задание 2" << '\n';
  int d;
  cout << "Введите значение диаметра окружности: ";
  cin >> d;
  float L;
  L = 3.14 * d;
  cout << "Длина окружности равна: " << L << endl;

	//Задание 3
	cout << "Задание 3" << '\n';
