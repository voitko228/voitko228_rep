#include <iostream>
#include <cmath>
using namespace std;

int main() {
	setlocale(LC_ALL, "Russian");
	int m, n;
	int a, b, c;
	int a1, b1;
	int a2b2;
	int b2a2;
	int a3b3c3, b3c3a3;
	
	cout << "Задание 1" << endl;
	cout << "Количество Байт: ";
	cin >> m;
	n = m / 1024;
	cout << "Килобайт: " << n << '\n';
	cout << "__________________________________";
	cout << endl;
	

 

	cout << "Задание 2" << endl;
	cout << "a:";
	cin >> a;
	cout << "b:";
	cin >> b;
	c = a / b;
	cout << "Количество отрезков В , размещенных на отрезке A: " << c << '\n';
	cout << "__________________________________";
	cout << endl;


 
	 cout << "Задание 3" << endl;
	 cout << "Введите число А: ";
	 cin >> a1;
	 cout << "Введите число B: ";
	 cin >> b1;
	 cout << "Длина свободной части: " << a1 % b1 << '\n';
	 cout << "__________________________________";
	 cout << endl;



 
	 cout << "Задание 4" << endl;
	 cout << "Введите двузначное число: ";
	 cin >> a2b2;
	 b2a2 = a2b2 / 10 + a2b2 % 10 * 10;
	 cout << "Число при перестановке цифр: " << b2a2 << '\n';
	 cout << "__________________________________";
	 cout << endl;


 

	 cout << "Задание 5" << endl;
	 cout << "Трехзначное число:";
	 cin >> a3b3c3;
	 cout << endl;

	 b3c3a3 = (a3b3c3 % 100 / 10 * 100) + (a3b3c3 % 10) * 10 + a3b3c3 / 100;
	 cout << "Полученное число:" << b3c3a3 << '\n';
	 cout << "__________________________________";
	 return 0;
 }
