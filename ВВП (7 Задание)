#include <iostream>
#include <stdio.h>
using namespace std;

int main()
{
	setlocale(LC_ALL, "rus");
	cout << "Задание 1" << '/n';
	double pi = 3.14, a, rad;
	cout << "Введите градусную меру угла" << '/n';
	cout << "A = ";
	cin >> a;
	rad = pi * a / 180; 
	cout << "Результат: " << rad;
  

	cout << "Задание 2" << '/n' << endl;
	float a, rad;
	cout << "Введите значение угла: ";
	cin >> a;
	rad = (a * 180) / 3.14;
	cout << "Результат: " << rad;
  
    cout << "Задание 3" << '/n' << endl;  
    float X, A, Y;
    cout << "Значение X: ";
    cin >> X;
    cout << "Значение A: ";
    cin >> A;
    cout << "Значение Y: ";
    cin >> Y;
    float price;
    price = A / X;
    cout << "Цена: " << price << endl;
    cout << "Стоимость: " << Y * price;
    
    
    cout << "Задание 4" << '/n' << endl;
    int V1, V2, S, T, Result;
    cout << "Введите скорость первого автомобился : ";
    cin >> V1;
    cout << "Введите скорость второго автомобиля : ";
    cin >> V2;
    cout << "Введите расстояние между автомобилями : ";
    cin >> S;
    cout << "Введите прошедшее время : ";
    cin >> T;
    Result = S + V1 * T + V2 * T;
    cout << "Расстояние между автомабилями через T часов : " << Result;
    
    
    cout << "Задание 5" << '/n' << endl;
    int A, B, X;
    cout << "Введите коэфициент A : ";
    cin >> A;
    cout << "Введите коэфициент B : ";
    cin >> B;
    X = (-1) * B / A;
    cout << "X равен : " << X;
    
    
  cout << "Задание 6" << '/n' << endl;
  double a1, b1, c1, a2, b2, c2, x, y, D;
	cout << "Введите коэффициенты 1-го уровнения: ";
	cin >> a1 >> b1 >> c1;
	cout << endl;
	cout << "Введите коэффициенты 2-го уравнения: ";
	cin >> a2 >> b2 >> c2;
  D = a1 * b2 - a2 * b1;
	x = (c1 * b2 - c2 * b1) / D;
	y = (a1 * c2 - a2 * c1) / D;
  cout << "x = " << x << endl;
	cout << "y = " << y << endl;
  
  
 return 0;
 }
    
  
  
  
